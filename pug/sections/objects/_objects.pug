mixin object(image, title)
    div(data-modal-target="object").object
        img(src=image, alt=title)
        h2= title

section.objects
    div.container

        h2.underline Наши объекты

        div.filter

            div.tags
                div.overflow
                    div.tag.opened Все
                    div.tag Комплексное благоустройство
                    div.tag Все типы дорог
                    div.tag Дачные посёлки

            div.sort
                a(href="?sort=asc").active Сначала новые
                a(href="?sort=desc") Сначала старые

        div.years
            div.year
                h2 2024
                div.list
                    +object('images/webp/24.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/25.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/26.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/27.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/21.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/28.webp', 'Реконструкция ул. Крисанова в Перми')

            div.year
                h2 2023
                div.list
                    +object('images/webp/29.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/30.webp', 'Реконструкция ул. Крисанова в Перми')
                    +object('images/webp/31.webp', 'Реконструкция ул. Крисанова в Перми')

        include ../_pagination.pug